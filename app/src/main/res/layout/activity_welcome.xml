<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="20dp"
    android:onClick="onClick"
    android:layout_marginEnd="20dp"
    tools:context=".WelcomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_weight="1"
                android:src="@drawable/hello"
                app:srcCompat="@drawable/hello" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="242dp"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:layout_weight="1"
                android:text="@string/hello"
                android:textSize="24dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:text="@string/go"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Вход по E-mail"
            android:textColor="#7E7E9A"
            android:layout_marginTop="64dp"
            />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:alpha="0.5"
            android:background="@drawable/input_border"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:padding="14px"
            android:text="example@mail.ru"
            android:textColor="#000000"
            android:textSize="15dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="56dp"
            android:backgroundTint="#1A6FEE"
            android:layout_marginTop="32dp"
            android:text="Далее"
            app:cornerRadius="10dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Или войдите с помощью"
            android:textAlignment="center"
            android:layout_marginTop="240dp"
            android:textColor="#939396"
            android:textSize="15dp" />

        <Button
            android:id="@+id/buttonYandex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#fff"
            android:padding="18dp"
            android:background="@drawable/input_border"
            android:text="Войти с Яндекс"
            android:textColor="#000"
            app:cornerRadius="10dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>